@model AchievementTracker.Models.AchieveTrack

<div class="row" style="margin-top:10px;">
    <div class="col-sm-12">
        <form method="post">
            <button type="submit" class="btn btn-success" asp-action="Add" asp-controller="Home">Add Game</button>
            @if(Model.count > 0){
                <button type="submit" class="btn btn-danger" asp-action="Delete" asp-controller="Home">Delete Game</button>
            } 
            <div>@TempData["feedback"]</div>
        </form>
    </div>
</div>

<div class="row" style="margin-top:10px;">
    <div class="col-sm-12">
        @if (Model.count > 0){
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Achievement Earned</th>
                        <th>Max Achievements</th>
                        <th>Earned Percentage</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var game in Model.games){
                        <tr>
                            <td><a asp-controller="Home" asp-action="Edit" asp-route-gameID="@game.gameID">@game.name</a></td>
                            <td>@game.achievementsEarned</td>
                            <td>@game.maxAchievements</td>
                            <td>@game.achievementPercent%</td>
                        </tr>
                    }
                </tbody>
            </table>
        } else {
            <h2>There are no games in your tracker, add them above</h2>
        }

        <h3>Total Achievement Count: @Model.earnedTotal / @Model.earnedMax</h3>
        <h3>Total Achievement Percentage: @Model.earnedPercent%</h3>
    </div>
</div>